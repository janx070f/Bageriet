@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/styles/css/Dashboard.css" rel="stylesheet" />
    <link href="~/Content/styles/css/layout.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    @RenderSection("Styles", false)
</head>
<body>
    <div id="wrapper">
        <!-- Sidebar -->
        <div id="sidebar-wrapper">

            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <a href="javascript:void(0)">
                        <h2><i class=" fa fa-paper-plane"> AdminPanel </i></h2>
                    </a>
                </li>
                <li>
                    <a href="/Admin/Index">Dashboard</a>
                </li>

                @*<li>
                    <a href="/Admin/CategoryList">Category</a>
                </li>
                <li>
                    <a href="/Admin/ProductList">Products</a>
                </li>*@
                @*<li>
                        <a href="/Admin/SizeList">Sizes</a>
                    </li>*@
                <li>
                    <a href="/Admin/NewsletterList">Newsletter</a>
                </li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="javascript:void(0)">Bruger Roller<span class="caret"></span></a>

                    <ul class="dropdown-menu">
                        <li>
                            <a href="/Account/RoleList">Lav Brugerroller</a>
                        </li>
                        <li>
                            <a href="/Account/GetRoles">Se Brugerroller</a>
                        </li>
                        <li>
                            <a href="/Account/RoleAddToUser">Tilføj Rolle til Bruger</a>
                        </li>
                    </ul>
                </li>

            </ul>

        </div>
        <!-- /#sidebar-wrapper -->


        <header class="navbar navbar-default">
            <form style="display: block" action="@Url.Action("LogOff", "Account")" method="post" id="logoutForm">
                @Html.AntiForgeryToken()
                <ul class="nav navbar-nav-custom">
                    <li style="z-index: 999;">
                        <a href="#menu-toggle" class="btn btn-info" id="menu-toggle"><i class="fa fa-navicon fa-2x"></i></a>
                    </li>
                    <li>
                        <a style="color: #000000;" href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-power-off"></i> Logout</a>

                    </li>
                </ul>
            </form>
            <h2 style="text-align: center; position: absolute; width: 100%; ">Administrationspanel</h2>

        </header>
        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="col-md-12 ">
                <img responsive style="max-width: 1800px; float: left; position: absolute; z-index: -1;" src="~/Uploads/kari-shea-272383.jpg" alt="admin background" />
            </div>
            <div class="container">

                <div class="row">
                    <div class="col-lg-12">

                        <br />
                        <div class="well">
                            <div class="content-header">
                                <ul class="nav-horizontal text-center">
                                    <li class="active">
                                        <a href="/Admin/Index"><i class="fa fa-tachometer"></i> Dashboard</a>
                                    </li>
                                    <li>
                                        <a href="/Admin/Contact"><i class="fa fa-commenting-o"></i>Kontakt</a>
                                    </li>
                                    <li>
                                        <a href="/Admin/CompanyList"><i class="fa fa-building-o"></i> Vores Adresse</a>
                                    </li>
                                    <li>
                                        <a href="/Admin/BlogList"><i class="fa fa-newspaper-o"></i> News</a>
                                    </li>
                                    <li>
                                        <a href="/Admin/SliderList"><i class="fa fa-sliders"></i> Slider</a>
                                    </li>
                                    <li>
                                        <a href="/Admin/CategoryList"><i class="fa fa-wrench"></i> Kategori</a>
                                    </li>
                                    <li>
                                        <a href="/Admin/ProductList"><i class="fa fa-cogs"></i>Products</a>
                                    </li>
                                    

                                </ul>
                            </div>
                            @RenderBody()
                        </div>
                    </div>
                </div>
                <footer>
                    <a target="_blank" style="color: white" href="https://unsplash.com"><p><small>Photo by Kari Shea on Unsplash</small></p></a>


                </footer>
            </div>
        </div>


    </div>

    <script src="~/Scripts/jquery-3.1.1.js"></script>

    <script src="~/Scripts/bootstrap.min.js"></script>
    <!-- Menu Toggle Script -->
    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>
    @RenderSection("Scripts", false)
</body>
</html>
