@model Bageriet.Models.Slider   
@{
    ViewBag.Title = "SliderEdit";
    Layout = "~/Views/Shared/Backend/_Layout.cshtml";
}

<div id="page-content">
    <div class="content-header">
        <div class="header-section">
            <h1>
                <i class="fa fa-sliders"></i>Ændre Slider<br><small>Her ændre slider billeder </small>
            </h1>
        </div>
    </div>

<div class="block block-alt-noborder" style="min-height: 300px">
    <h3 class="sub-header">Ændre Sliders <small>Billeder</small></h3>

    <form role="form" enctype="multipart/form-data" method="post" action="/Admin/SliderEdit">
        <input type="hidden" name="Id" value="@Model.Id"/>
      
        <div class="form-group">
            <label class="control-label" for="ImageUrl">Billede</label>
            <img class="img-responsive" style="height: 100px; width: auto;" src="/Uploads/slider/@Model.ImageUrl" alt="BlogImage"/>
            <input type="file"  class="form-control" name="file" placeholder="Billede">
        </div>
 
        <button type="submit" class="btn btn-default">Godkend</button>

  
        <a class="btn btn-danger" href="@Url.Action("SliderList","Admin")"><i class="fa fa-times" aria-hidden="true"></i> Back </a>
    </form>
</div>
</div>

