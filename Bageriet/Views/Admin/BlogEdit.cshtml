@model Bageriet.Models.Blog
@{
    ViewBag.Title = "BlogEdit";
    Layout = "~/Views/Shared/Backend/_Layout.cshtml";
}
<div id="page-content">
    <div class="content-header">
        <div class="header-section">
            <h1>
                <i class="fa fa-newspaper-o"></i>Ændre Blog<br><small>Her ændre du dine blogs </small>
            </h1>
        </div>
    </div>

<div class="block block-alt-noborder" style="min-height: 300px">
    <h3 class="sub-header">Ændre Blogs <small>Blog / News Inidlæg</small></h3>

    <form role="form" enctype="multipart/form-data" method="post" action="/Admin/BlogEdit">
        <input type="hidden" name="Id" value="@Model.Id"/>
        <div class="form-group">
            <label class="control-label" for="Title">Titel</label>
            <input type="text" value="@Model.Title" class="form-control" name="Title" placeholder="Enter Titel">
        </div>
        <div class="form-group">
        
            <label class="control-label" for="ImageUrl">Billede</label>
            <img class="img-responsive" style="height: 100px; width: auto;" src="/Uploads/@Model.ImageUrl" alt="BlogImage"/>
            <input type="file"  class="form-control" name="file" placeholder="Billede">
        </div>
        <div class="form-group">
            <label class="control-label" for="Content">Ændre Beskrivelse</label>
            <textarea class="form-control" name="Content">@Model.Content </textarea>
        </div>
        <button type="submit" class="btn btn-default">Godkend</button>

  
        <a class="btn btn-danger" href="@Url.Action("BlogList","Admin")"><i class="fa fa-times" aria-hidden="true"></i> Back </a>
    </form>
</div>
</div>