@model IEnumerable<Bageriet.Models.Category>
@{
    ViewBag.Title = "CategoryList";
    Layout = "~/Views/Shared/Backend/_Layout.cshtml";
}
<link href="~/Content/font-awesome.min.css" rel="stylesheet" />

@*<h1>Category List</h1>*@
<div id="page-content">
    <div class="content-header">
        <div class="header-section">
            <h1>
                <i class="fa fa-bookmark-o"></i>Kategori<br><small>Her er listen af Kategorier </small>
            </h1>
        </div>
    </div>

    <div class="block block-alt-noborder" style="min-height: 300px">
        <h3 class="sub-header">Liste Kategorier <small>Flere kan tilføjes</small></h3>
        <div>
            <a href="@Url.Action("CategoryCreate", "Admin")" class="btn btn-info New"><i class=" fa fa-pencil "></i> Tilføj Ny !</a>
        </div>
        <br />
        <div class="row">
            <br />
            <div class="table table-striped">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Kategori</th>
                            <th>Beskrivelse</th>
                            <th>Redigering</th>
                        </tr>
                    </thead>

                    @foreach (var category in Model)
                    {
                        <tbody>
                            <tr>
                            <td>
                                <div class="col-md-11">
                                    <h3>@category.Title</h3>
                                </div>
                            </td>
                            <td>
                                <p>@category.Description</p>
                            </td>
                                <td>
                                    <a class="btn btn-danger" href="@Url.Action("DeleteCategory", "Admin", new {id = category.Id})"><i class="fa fa-trash"></i></a>
                                    <a class="btn btn-info" href="@Url.Action("CategoryEdit", "Admin", new {id = category.Id})">
                                        <i class="fa fa-pencil-square-o"></i>
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                    }
                       
                </table>
            </div>
        </div>
    </div>
</div>