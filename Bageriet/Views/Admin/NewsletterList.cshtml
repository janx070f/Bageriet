@model IEnumerable<Bageriet.Models.Newsletter>

@{
    ViewBag.Title = "NewsletterList";
    Layout = "~/Views/Shared/Backend/_Layout.cshtml";
}


<link href="~/Content/font-awesome.min.css" rel="stylesheet" />

@*<h1>Newsletter List</h1>*@
<div id="page-content">
    <div class="content-header">
        <div class="header-section">
            <h1>
                <i class="fa fa-envelope-open-o"></i>Nyhedsbrev<br><small>Her er listen af Nyhedsbreve </small>
            </h1>
        </div>
    </div>

    <div class="block block-alt-noborder" style="min-height: 300px">
        <h3 class="sub-header">Liste Nyhedsbreve <small>Flere kan tilføjes</small></h3>
        <div>
            <a href="/Admin/NewsletterCreate" class="btn btn-info New"><i class=" fa fa-pencil "></i> Tilføj Ny !</a>
        </div>
        <br />
        <div class="row">
            <br />
            <div class="table table-striped">
                <table class="table">
                    @foreach (var newsletter in Model)
                    {
                        <tr>
                            <td>
                                <div class="col-md-11">
                                    <h3>@newsletter.Title</h3>
                                    @*<td>@Html.Raw(newsletter.HtmlContent)</td>*@
                                </div>
                                <a class="btn btn-success edit" href="@Url.Action("NewsletterSend", new {id = newsletter.Id})" aria-label="Settings">
                                    <i class="fa fa-send" aria-hidden="true"></i>
                                </a>
                                <a class="btn btn-danger" href="@Url.Action("DeleteNewsletter",new {id = newsletter.Id})"><i class="fa fa-trash"></i></a>
                                @*<a class="btn btn-info" href="/Admin/NewsletterEdit/@newsletter.Id">
                                        <i class="fa fa-pencil-square-o"></i>
                                    </a>*@
                            </td>

                        </tr>

                    }

                </table>
            </div>
        </div>
    </div>
</div>