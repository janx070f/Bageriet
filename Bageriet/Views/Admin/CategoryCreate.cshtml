@model IEnumerable<Bageriet.Models.Category>

@{
    ViewBag.Title = "CategoryCreate";
    Layout = "~/Views/Shared/Backend/_Layout.cshtml";
}

@*<h2 class="label-primary">Opret kategori</h2>*@
<div id="page-content">
    <div class="content-header">
        <div class="header-section">
            <h1>
                <i class="fa fa-bookmark-o"></i>Opret Kategori<br><small>Her opretter du nye kategorier </small>
            </h1>
        </div>
    </div>

<div class="block block-alt-noborder" style="min-height: 300px">
    <h3 class="sub-header">Opret Kategorier <small>Kategorier</small></h3>
    <form role="form" method="post" action="/Admin/CategoryCreate">

        <div class="form-group">
            <label class="control-label" for="Title">Titel</label>
            <input type="text" class="form-control" name="Title" placeholder="Skriv Titel">
        </div>
         
         <div class="form-group">
            <label class="control-label" for="Description">Beskrivelse</label>
            <textarea class="form-control" required name="Description" placeholder="Skriv en kort beskrivelse"> </textarea>
        </div>

        <button type="submit" class="btn btn-default">Godkend</button>
        <a class="btn btn-danger" href="@Url.Action("CategoryList","Admin")">Cancel</a>

    </form>
</div>
</div>