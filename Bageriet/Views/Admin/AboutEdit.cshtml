@model Bageriet.Models.About
@{
    ViewBag.Title = "AboutEdit";
    Layout = "~/Views/Shared/Backend/_Layout.cshtml";
}

<div id="page-content">
    <div class="content-header">
        <div class="header-section">
            <h1>
                <i class="fa fa-address-book-o"></i>Ændre About <br><small>Ændre oplysninger om os </small>
            </h1>
        </div>
    </div>

<div class="block block-alt-noborder" style="min-height: 300px">
    <h3 class="sub-header">Ændre About <small>Ændre Om vores virksomhed</small></h3>

    <form role="form" enctype="multipart/form-data" method="post" id="aboutEdit" action="/Admin/AboutEdit">
        <input type="hidden" name="Id" value="@Model.Id" />
        <div class="form-group col-md-2">
            <label class="control-label" for="Title">Titel</label>
            <input type="text" value="@Model.Title" class="form-control" name="Title" required placeholder="Enter Titel">
        </div>
        <div class="form-group col-md-10">
            <label class="control-label" for="Description">Tekst</label>
            <textarea type="text" class="form-control" name="Description"required placeholder="Beskrivelse" >@Model.Description"</textarea>
        </div>
    
        <button type="submit" class="btn btn-default">Godkend</button>

        <a class="btn btn-danger" href="/Admin/AboutList"><i class="fa fa-times" aria-hidden="true"></i> Back </a>
    </form>
</div>
    </div>

@section Styles
{
    <link href="//cdnjs.cloudflare.com/ajax/libs/jquery.bootstrapvalidator/0.5.0/css/bootstrapValidator.min.css" rel="stylesheet" />
}

@section Scripts {
    
  <script type="text/javascript" src=" //cdnjs.cloudflare.com/ajax/libs/bootstrap-validator/0.4.5/js/bootstrapvalidator.min.js"></script>
    <script type="text/javascript" src="~/Scripts/main.js"></script>
}
