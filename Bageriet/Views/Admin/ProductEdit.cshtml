@model Bageriet.ViewModels.ProductVM
@{
    ViewBag.Title = "ProductEdit";
    Layout = "~/Views/Shared/Backend/_Layout.cshtml";
}

<h2 class="label-primary">Produkt Edit</h2>
<div id="page-content">
    <div class="content-header">
        <div class="header-section">
            <h1>
                <i class="fa fa-cogs"></i>Ændre Produkt <br><small>Her kan du ændre dit produkt </small>
            </h1>
        </div>
    </div>

    <div class="block block-alt-noborder" style="min-height: 300px">
        <h3 class="sub-header">Produkt <small>HHer kan produktet ændres </small></h3>
        <form role="form" enctype="multipart/form-data" method="post" action="/Admin/ProductEdit">
            <input type="hidden"name="Id" value="@Model.Product.Id"/>
            <div class="form-group">
                <label class="control-label" for="Title">Titel</label>
                <input type="text" value="@Model.Product.Title" class="form-control" name="Title" placeholder="Enter Titel">
            </div>
            <div class="form-group">
                <label class="control-label" for="ImageUrl">Billede</label>
                <img class="img-responsive" style="height: 100px; width: auto;" src="/Uploads/@Model.Product.ImageUrl" alt="Produktbillede"/>
                <input type="file"  class="form-control" name="file" placeholder="Billede">
            </div>
            <div class="form-group">
                <label class="control-label" for="CategoryId">Kategori</label>
                <select name="CategoryId">
                    <option selected value="@Model.Product.CategoryId">@Model.Product.Category.Title</option>
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Id">@category.Title</option>
                    }
                </select>
            </div>

          
            <div class="form-group">
                <label class="control-label" for="Description">Ændre Beskrivelse</label>
                <textarea class="form-control" name="Description">@Model.Product.Description </textarea>
            </div>
          

            <button type="submit" class="btn btn-default">Godkend</button>
         
  
            <a class="btn btn-danger" href="/Admin/ProductList"><i class="fa fa-times" aria-hidden="true"></i> Back </a>
        </form>
    </div>
</div>

