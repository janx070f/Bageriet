@model Bageriet.Models.Category
@{
    ViewBag.Title = "CategoryEdit";
    Layout = "~/Views/Shared/Backend/_Layout.cshtml";
}


<div id="page-content">
    <div class="content-header">
        <div class="header-section">
            <h1>
                <i class="fa fa-bookmark-o"></i>Kategori<br><small>Her kan du ændre Kategorier </small>
            </h1>
        </div>
    </div>

<div class="block block-alt-noborder" style="min-height: 300px">
    <h3 class="sub-header">Kategorier <small>Her kan kategorien ændres</small></h3>
    <form role="form" method="post" action="/Admin/CategoryEdit">
        <input type="hidden" name="Id" value="@Model.Id" />
        <div class="form-group">
            <label class="control-label" for="Title">Titel</label>
            <input type="text" value="@Model.Title" class="form-control" name="Title" placeholder="Skriv Titel">
        </div>
        <div class="form-group">
            <label class="control-label" for="Description">Ændre Beskrivelse</label>
            <textarea class="form-control" name="Description">@Model.Description </textarea>
        </div>
        <button type="submit" class="btn btn-default">Godkend</button>
        <button type="reset" class="btn btn-danger">Cancel</button>
    </form>
</div>
</div>