@model IEnumerable<Bageriet.Models.About>
@*@model Bageriet.Models.About*@

@{
    ViewBag.Title = "AboutCreate";
    Layout = "~/Views/Shared/Backend/_Layout.cshtml";
}


<div id="page-content">
    <div class="content-header">
        <div class="header-section">
            <h1>
                <i class="fa fa-address-book-o"></i>About <br><small> Oplysninger om os </small>
            </h1>
        </div>
    </div>

<div class="block block-alt-noborder" style="min-height: 300px">
    <h3 class="sub-header">About <small>Om vores virksomhed</small></h3>

    <form role="form" enctype="multipart/form-data" method="post" id="aboutCreate" action="/Admin/AboutCreate">

        <div class="form-group col-md-2">
            <label class="control-label" for="Title">Titel</label>
            <input type="text" class="form-control" required name="Title" reqired placeholder="Skriv Titel">
        </div>
        <div class="form-group col-md-10">
            <label class="control-label" for="Description">Tekst</label>
            <textarea type="text" class="form-control" name="Description" placeholder="Beskrivelse" required></textarea>
        </div>
        <button type="submit" class="btn btn-default">Godkend</button>
  
        <a class="btn btn-danger" href="/Admin/AboutList"><i class="fa fa-times" aria-hidden="true"></i> Back </a>
    </form>
</div>
    </div>

@section Styles
{
    <link href="//cdnjs.cloudflare.com/ajax/libs/jquery.bootstrapvalidator/0.5.0/css/bootstrapValidator.min.css" rel="stylesheet" />
}

@section Scripts {
    
   <script type="text/javascript" src=" //cdnjs.cloudflare.com/ajax/libs/bootstrap-validator/0.4.5/js/bootstrapvalidator.min.js"></script>
    <script type="text/javascript" src="~/Scripts/main.js"></script>
}


