@model Bageriet.ViewModels.ContentVm
@{
    ViewBag.Title = "Index";
}
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css?family=Lobster1.4|Open+Sans" rel="stylesheet">
<link href="~/Content/shop-homepage.css" rel="stylesheet" />

<div class="row">

    <!-- Carousel
    ================================================== -->
    <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="10000">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" role="listbox">

            @foreach (var item in Model.SliderList)
            {
                if (item == Model.SliderList[0])
                {
                    <div class="item active">
                        <img responsive class="first-slide" style="height: 700px;" src="/Uploads/slider/@item.ImageUrl" alt="First slide">
                        <div class="container">

                        </div>
                    </div>
                }
                else
                {
                    <div class="item">
                        <img responsive class="first-slide" style="height: 700px;" src="/Uploads/slider/@item.ImageUrl" alt="Slide">
                        <div class="container">

                        </div>
                    </div>
                }


            }



        </div>
        <div class="Title">
            <h1 style="font-size: 84pt"><b>Vi Elsker at lave brød</b></h1>

        </div>
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div><!-- /.carousel -->
</div>
<div class="row About">
    <div class="col-md-12 text-center">

        <h1>Vi skaberlækkert brød</h1>
        <h5>Lorem Ipsum har ikke alene overlevet fem århundreder, men har også vundet indpas i elektronisk typografi uden væsentlige ændringer.</h5>
    </div>
    <div class="col-md-9 col-md-push-3">
        @foreach (var news in Model.Blogs)
        {
            <div class="col-md-3 img-container">
                <div class="text-center">
                    <img class="img-rounded" src="~/Uploads/@news.ImageUrl" alt="news 1" />
                    <h4 class="text-center text-uppercase">@news.Title</h4>
                    <p class="text-center">@news.Content</p>
                </div>
            </div>
        }
 
    </div>

</div>
<div class="row newsbg" style="margin: 0;">
    <div class="col-md-12 newsletter">
        <h2 class="text-center ">Tilmeld dig til vores nyhedsbrev</h2>
        <p class="text-center">Lorem Ipsum har ikke alene overlevet fem århundreder</p>
        <div class="col-md-8 col-md-push-4 text-center">
            <div class="input-group">
                <form action="~/Home/NewSubscriber" id="Signup-Newsletter" method="post">
                    <label class="control-label" for="email"> </label>
                    <input type="email" required class="form-control" name="email" placeholder="Indtast Email" />

                    <button class="btn btn-default" type="submit"><i class="fa fa-envelope"> Send</i></button>

                </form>
            </div>

        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12 text-center">
        <h1>Nyeste bagværk</h1>
        <h5 class="text-center">Lorem Ipsum har ikke alene overlevet fem århundreder, men har også vundet indpas i elektronisk typografi uden væsentlige ændringer.</h5>
    </div>
    <div class="col-md-10 col-md-push-1">

        @foreach (var prod in Model.Products)
            {
            <div class="col-md-3 text-center">
                <img src="~/Uploads/@prod.ImageUrl" />
                <span>
                   @if (prod.BlogComment.Count == 0)
                            {
                                <p>Der er ingen kommentarer endnu! </p>
                               
                            }
                            else
                            {
                                <p><i class="fa fa-comment-o"></i> <a href="#" title="">@prod.BlogComment.Count Kommentar</a></p>

                            }
                       
                         
                        
                </span>
                <h4><b>@prod.Title</b></h4>
                <p>@prod.Description</p>
                <a class="btn btn-default" href="~/Home/ProductDetail/@prod.Id">SE MERE</a>
            </div>
        }


    </div>
</div>

@section scripts{
    <script src="~/Scripts/jquery-3.1.1.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/6.6.9/sweetalert2.min.js"></script>
    <script src="~/Scripts/main.js"></script>
}


